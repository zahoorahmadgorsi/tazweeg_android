<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bulahej.tazweeg">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activities.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar"></activity>
        <activity
            android:name=".activities.PhoneActivity"
            android:label="@string/title_activity_phone"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name=".activities.CountriesActivity"
            android:label="@string/title_activity_countries"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:label="@string/title_activity_change_password"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name=".activities.ChangeLanguageActivity"
            android:label="@string/title_activity_change_language"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:parentActivityName=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bulahej.tazweeg.activities.LoginActivity" />
        </activity>
        <activity android:name=".activities.onBoarding.OnboardingActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity android:name=".activities.UserSelectionActivity" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".activities.CommonSignupActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".activities.StateAndConsultantActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SignUpActivity1"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SignUpActivity2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SignUpActivity3"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SignUpActivity4"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SignUpActivity5"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.OTPVerificationActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bulahej.tazweeg.activities.CommonSignupActivity" />
        </activity>
        <activity
            android:name=".activities.WebViewActivity"
            android:screenOrientation="portrait" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

</manifest>