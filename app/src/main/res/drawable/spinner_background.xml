<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="13dp" android:left="10dp" android:right="10dp" android:top="13dp" />
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@color/colorBlack" />
                </shape>
            </item>

            <item>
                <bitmap android:gravity="center_vertical|end" android:src="@drawable/ic_down_arrow" />
            </item>
        </layer-list>
    </item>
</selector>